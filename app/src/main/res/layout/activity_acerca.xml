<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calculadoracl.facci.com.calculadoracl.AcercaActivity"
    android:id="@+id/Resultado">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="7"
                android:id="@+id/bt7"
                android:onClick="Siete"
            android:layout_alignTop="@+id/bt7"
            android:layout_toEndOf="@+id/bt7"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="8"
                android:id="@+id/bt8"
                android:onClick="Ocho"
            android:layout_alignTop="@+id/bt8"
            android:layout_toEndOf="@+id/bt8"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="9"
                android:id="@+id/bt9"
                android:onClick="Nueve"
            android:layout_alignTop="@+id/bt9"
            android:layout_toEndOf="@+id/bt9"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="*"
                android:id="@+id/btM"
            android:onClick="Multiplicar"
            android:layout_alignTop="@+id/btM"
            android:layout_toEndOf="@+id/btM"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="4"
                android:id="@+id/bt4"
                android:onClick="Cuatro"
            android:layout_alignTop="@+id/bt4"
            android:layout_toEndOf="@+id/bt4"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="5"
                android:id="@+id/bt5"
                android:onClick="Cinco"
            android:layout_alignTop="@+id/bt5"
            android:layout_toEndOf="@+id/bt5"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="6"
                android:id="@+id/bt6"
                android:onClick="Seis"
            android:layout_alignTop="@+id/bt6"
            android:layout_toEndOf="@+id/bt6"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="-"
                android:id="@+id/btR"
                android:onClick="Resta"
            android:layout_alignTop="@+id/bt-"
            android:layout_toEndOf="@+id/bt-"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="1"
                android:id="@+id/bt1"
            android:onClick="Uno"
            android:layout_alignTop="@+id/bt1"
            android:layout_toEndOf="@+id/bt1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="2"
                android:id="@+id/bt2"
                android:onClick="Uno"
            android:layout_alignTop="@+id/bt2"
            android:layout_toEndOf="@+id/bt2"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="3"
                android:id="@+id/bt3"
                android:onClick="Tres"
            android:layout_alignTop="@+id/bt3"
            android:layout_toEndOf="@+id/bt3"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="+"
                android:id="@+id/btS"
                android:onClick="Suma"
            android:layout_alignTop="@+id/bt+"
            android:layout_toEndOf="@+id/bt+"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:text="Acerca"
                android:id="@+id/btA"
                android:onClick="Acerca"
            android:layout_alignTop="@+id/btA"
            android:layout_toEndOf="@+id/btA"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="0"
                android:id="@+id/btC"
                android:onClick="Cero"
            android:layout_alignTop="@+id/btC"
            android:layout_toEndOf="@+id/btC"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="="
                android:id="@+id/btI"
                android:onClick="Igual"
            android:layout_alignTop="@+id/bt="
            android:layout_toEndOf="@+id/btI"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
